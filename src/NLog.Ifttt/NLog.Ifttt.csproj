<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard1.3</TargetFramework>
        <RootNamespace>NLog.Targets</RootNamespace>
        <AssemblyVersion>$(appveyor_build_version)</AssemblyVersion>
    </PropertyGroup>
    
    <PropertyGroup>
        <!-- nuget -->
        <IsPackable>true</IsPackable>
        <RepositoryUrl>https://github.com/adenisov/NLog.Ifttt.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageVersion>$(appveyor_build_version)</PackageVersion>
        <Description>Allows to use an IFTTT web hook as a NLog target.</Description>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="NLog" Version="4.5.0" />
    </ItemGroup>

</Project>
